    "size": "size-limit",
    "analyze": "size-limit --why",
    "np": "np"
  },
  "husky": {
    "hooks": {
      "pre-commit": "eslint src test"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "name": "savim",
  "author": "flexper",
  "module": "dist/savim.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/flexper/savim.git"
  },
  "bugs": {
    "url": "https://github.com/flexper/savim/issues",
    "email": "contact@flexper.fr"
  },
  "size-limit": [
    {
      "path": "dist/savim.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/savim.esm.js",
      "limit": "10 KB"
    }
  ],
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "./node_modules/"
    ]
  },
  "devDependencies": {
    "@jest/globals": "29.5.0",
    "@size-limit/preset-small-lib": "8.2.4",
