    "@typescript-eslint/parser": "5.55.0",
    "eslint": "8.36.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "np": "7.6.4",
    "prettier": "2.8.5",
    "size-limit": "8.2.4",
    "tsdx": "0.14.1",
    "tslib": "2.5.0",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "@types/node": "^18.14.6",
    "pino": "^8.10.0"
  }
